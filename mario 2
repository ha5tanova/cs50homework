#include <stdio.h>
#include <stdlib.h>
//#define _CRT_SECURE_NO_WARNINGS
int main(void)
{
int i, j, h,a,b,b2;
system("chcp 1251");
do
{
printf("введите высоту нашей пирамиды:");
scanf_s("%d", &h);
}
while (h < 1 || h > 8);
for (int i = 1; i <= h; i++)
{
for (a = h - i; a > 0; a--)
{
printf(" ");
}
for (b = 1; b <= i; b++)
{
printf("#");
}
printf(" ");
for (b2 = 1; b2 <= i; b2++)
{
printf("#");
}
printf("\n");
}
return 0;
} 
